@page "//gwconfig/collectdevice"
@using AlbertCollection.Application.GlobalData;
@using AlbertCollection.Web.Rcl.Page.GatewayConfiguration.CommonPage;
@attribute [Authorize]
@attribute [RolePermission]
@inherits CultureComponentBase
@inject GlobalDeviceData GlobalDeviceData

@layout MainLayout
<MRow NoGutters>
    <MCol Md="2" Style="padding-left:10px">
        @foreach (var item in _deviceCollections)
        {
            <DeviceShowBase Device="@item" OnClickFromF="HandleDeviceClick">
            </DeviceShowBase>
        }
    </MCol>
    <MCol Md="10" Class="d-flex flex-row mb-8 flex-wrap">
        @if (_device?.StationSeqs != null)
        {
            @foreach (var item in _device.StationSeqs)
            {
                <StationShowBase DeviceSeq="item"></StationShowBase>
            }
        }
    </MCol>
</MRow>