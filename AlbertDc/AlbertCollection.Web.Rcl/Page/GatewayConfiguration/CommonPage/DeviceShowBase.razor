@using AlbertCollection.Application.GlobalData;
@inherits CultureComponentBase
@inject MasaBlazor MasaBlazor
@inject GlobalDeviceData GlobalDeviceData

<MCard Style="max-width:200px;max-height:200px" OnClick="HandleClick">
    <MRow NoGutters Class="my-1" Justify="JustifyTypes.SpaceBetween"> 
        <MButton Color="green" OnClick="SingleStartCollect" Disabled="@_connectDisable">
            <MIcon>mdi-dev-to</MIcon>
        </MButton>
        <MButton Color="green" OnClick="StartCollect" Disabled="@_connectDisable">
            <MIcon>mdi-all-inclusive</MIcon>
        </MButton>
        <MButton Color="red" OnClick="StopCollect" Disabled="@(!_connectDisable)">
            <MIcon>mdi-stop</MIcon>
        </MButton>
    </MRow>
    <MRow NoGutters Class="my-1 d-flex flex-column mb-6">
        <PBlockText Primary="@("设备名称-"+Device?.Name)"></PBlockText>
        <PBlockText Primary="@("设备状态-"+Device?.DeviceStatus)"></PBlockText>
        <PBlockText Primary="@("设备地址-"+Device?.IpAddress)"></PBlockText>
        <PBlockText Primary="@("设备激活时间-"+Device?.ActiveTime)"></PBlockText>
    </MRow>
</MCard>


